<% for(var i=0;i<=(postContent.length-1);i++){ %> 
    <h1><%= postContent[i].title%></h1> 
    <% if (postContent[i].body.length > 100) {%>
        <%var str =postContent[i].body.substring(0, 100) + "...";%>
        <%= str %> <a href="/posts/<%=postContent[i].title %>" >more</a>
    <% }else { %> 
    <p><%= postContent[i].body%></p>
    <% } %> 
<% } %>  
